<?xml version="1.0" encoding="utf-8"?>
<com.example.editphotovideo.ui.editmovie.ScaleCardLayout
    android:id="@+id/rlMainContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="2.0dip"
    android:layout_marginLeft="4.0dip"
    android:layout_marginRight="4.0dip"
    android:layout_marginTop="4.0dip"
    android:background="@drawable/quantum_panel_dark_bitmap"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/ivThumb"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_card_transparent"
        android:clickable="true"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/clickableView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_card_transparent"
        android:clickable="true" />

    <ImageView
        android:id="@+id/ivRemove"
        android:layout_width="26.0dip"
        android:layout_height="26.0dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="2.0dip"
        android:layout_marginRight="2.0dip"
        android:layout_marginTop="2.0dip"
        android:src="@drawable/delete_" />


    <TextView
        android:id="@+id/textNumber"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="18.0sp" />
</com.example.editphotovideo.ui.editmovie.ScaleCardLayout>