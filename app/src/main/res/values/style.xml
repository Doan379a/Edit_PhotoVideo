<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#CCCCCC</item>
        <item name="colorControlActivated">#FFB800</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!--        <item name="colorPrimary">@color/colorPrimary</item>-->
        <!--        <item name="colorPrimaryDark">@color/color_app</item>-->
        <!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="Theme.MovieMaker.AlertDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#ff333333</item>
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
        <item name="colorAccent">#fff44336</item>
        <item name="colorPrimary">#fff44336</item>
        <item name="colorPrimaryDark">#fff44336</item>
    </style>
    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_scale_in</item>
        <item name="android:windowExitAnimation">@anim/anim_scale_out</item>
    </style>
</resources>